@model MVCEmployeeCrudOperationInMemoryRepository.Models.Employee

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>EditEmployee</title>
</head>
<body>
    <div style="font:100;color:blue;background-color:azure">
       EDIT EMPLOYEE DETAILS
    </div>
    @using (Html.BeginForm("EditEmployee", "EmployeeCrud", FormMethod.Post))
    {
        @Html.ActionLink("Index", "Index")
       
        @Html.HiddenFor(model => model.EMPID)
        <p>Employee Name</p>
        @Html.TextBox("EMPNAME",Model.EMPNAME)
        <p>Employee DOJ eg: dd/MM/yyyy</p>
        @Html.TextBox("DOJ",Model.DOJ)
        <p>Employee Department Name</p>
        @Html.TextBox("DEPTNAME",Model.DEPTNAME)
        <p>Enter Employee Department Location</p>
        @Html.TextBox("DEPTLOCATION",Model.DEPTLOCATION)
        <br />
        <input type="submit" value="submit" />
    }
</body>
</html>
